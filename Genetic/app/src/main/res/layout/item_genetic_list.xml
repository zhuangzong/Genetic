<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_item_genetic_list"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_80"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/lu"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_item_genetic_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="巴里昆马"
        android:layout_toRightOf="@+id/iv_item_genetic_list"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/black_3"/>
    <TextView
        android:id="@+id/tv_item_genetic_list_qun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类群：哺乳动物"
        android:layout_toRightOf="@+id/iv_item_genetic_list"
        android:layout_below="@+id/tv_item_genetic_list_name"
        android:layout_marginTop="@dimen/dp_3"
        android:textSize="@dimen/sp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_item_genetic_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型：特种经济动物"
        android:layout_below="@+id/tv_item_genetic_list_qun"
        android:layout_toRightOf="@+id/iv_item_genetic_list"
        android:layout_marginTop="@dimen/dp_3"
        android:textSize="@dimen/sp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_item_genetic_list_fenbu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分布：阿尔泰山和天山山脉及伊犁河谷地区阿尔泰山和天山山脉及伊犁河谷地区"
        android:layout_toRightOf="@+id/iv_item_genetic_list"
        android:layout_below="@+id/tv_item_genetic_list_type"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_3"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/sp_10"
        android:layout_marginLeft="@dimen/dp_10"/>
    <ImageView
        android:id="@+id/iv_item_genetic_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_item_genetic_list"
        android:layout_below="@+id/tv_item_genetic_list_fenbu"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/yiwei"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_item_genetic_list_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="狗"
        android:layout_toRightOf="@+id/iv_item_genetic_list_type"
        android:layout_below="@+id/tv_item_genetic_list_fenbu"
        android:layout_marginLeft="@dimen/dp_5"
        android:textColor="@color/white"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_2"
        android:paddingTop="@dimen/dp_2"
        android:textSize="@dimen/sp_9"
        android:layout_marginTop="@dimen/dp_3"
        android:background="@drawable/shape_corner_blue_circle_full" />
    <TextView
        android:id="@+id/tv_item_genetic_list_faxian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@mipmap/xinfaxian"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_item_genetic_list_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黑龙江"
        android:textSize="@dimen/sp_10"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_item_genetic_list_fenbu"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:drawableLeft="@mipmap/pos"
        android:drawablePadding="@dimen/dp_5"/>
</com.zhy.autolayout.AutoRelativeLayout>