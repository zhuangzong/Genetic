<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/tab_back"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:minHeight="@dimen/dp_40"
        android:layout_below="@+id/rel_login_title">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"/>

        <EditText
            android:id="@+id/et_register_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawablePadding="@dimen/dp_10"
            android:hint="请输入用户名"
            android:imeOptions="actionNext"
            android:minHeight="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_15"
            android:singleLine="true"
            android:textColor="@color/black_3"
            android:textColorHint="@color/gray_8a"
            android:textSize="@dimen/sp_15" />
    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_ea"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"/>

    <LinearLayout
        android:id="@+id/ll_register_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:minHeight="@dimen/dp_40"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/password"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"/>
        <EditText
            android:id="@+id/et_register_pwd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:minHeight="@dimen/dp_40"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black_3"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/dp_15"
            android:textColorHint="@color/gray_8a"
            android:drawablePadding="@dimen/dp_10"
            android:imeOptions="actionNext"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            />
        <ImageButton
            android:id="@+id/ib_visible_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:background="@mipmap/pwd_visible" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_ea"
        android:layout_below="@+id/ll_login_user"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_register_pwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:minHeight="@dimen/dp_40"
        android:layout_below="@+id/rel_login_title">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/password"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"/>
        <EditText
            android:id="@+id/et_register_pwd2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:minHeight="@dimen/dp_40"
            android:inputType="textPassword"
            android:hint="请确认密码"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black_3"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/dp_15"
            android:textColorHint="@color/gray_8a"
            android:drawablePadding="@dimen/dp_10"
            android:imeOptions="actionNext"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            />
        <ImageButton
            android:id="@+id/ib_visible_reg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:background="@mipmap/pwd_visible" />
    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_ea"
        android:layout_below="@+id/ll_login_user"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_register_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:minHeight="@dimen/dp_40"
        android:layout_below="@+id/rel_login_title">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/company"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"/>

        <EditText
            android:id="@+id/et_register_company"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawablePadding="@dimen/dp_10"
            android:hint="请输入所在单位"
            android:imeOptions="actionNext"
            android:minHeight="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_15"
            android:singleLine="true"
            android:textColor="@color/black_3"
            android:textColorHint="@color/gray_8a"
            android:textSize="@dimen/sp_15" />
    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_ea"
        android:layout_below="@+id/ll_login_user"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:minHeight="@dimen/dp_40">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/phone" />

        <EditText
            android:id="@+id/et_register_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:minHeight="@dimen/dp_40"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black_3"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/dp_15"
            android:textColorHint="@color/gray_8a"
            android:imeOptions="actionNext"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_ea"
        android:layout_below="@+id/ll_login_user"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"/>
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:background="@drawable/shape_corner_blue_full"
        android:layout_below="@+id/ll_login_pwd"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:text="@string/register_2"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        />
    <TextView
        android:id="@+id/tv_register_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_login_pwd"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/register_back"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:textColor="@color/maincolor"
        android:textSize="@dimen/sp_13"
        />
</com.zhy.autolayout.AutoLinearLayout>